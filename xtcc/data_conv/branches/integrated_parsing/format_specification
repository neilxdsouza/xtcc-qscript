; data converter input & output specification in ABNF notation
	NULL			= %x00
	BYTE			= %x00-FF
	string			= 1*CHAR
	int				= 1*DIGIT
	signed-int		= ["-"] int
	real			= signed-int ["." int] ["e" signed-int]
	; real contains signed-int; signed-int contains int
	
; input file *.dat {input} 
	
	input			= *answer
	answer			= question-name ":" single-answer LF
	question-name	= string
	single-answer	= real SP
	

; output file *.out {output}
	
	output			= header stubinfo record-map data
	
	header			= signature LF version LF char-sample LF short-sample LF long-sample LF float-sample LF double-sample LF
	signature		= "xtcc"
	version			= "0.0.0.0"
	char-sample 	= 4BYTE ; "xtcc"
	short-sample 	= 2BYTE ; short 0x4142
	long-sample 	= 4BYTE ; long 0x43444546
	float-sample	= 4BYTE ; float 3297809.75
	double-sample	= 8BYTE ; double 7.10524632318153195520e20
	
	stubinfo		= "STUBINFORMATION" LF *range "ENDSTUBINFORMATION" LF
	range			= range-name " =" *range-value LF
	range-name		= string
	range-value		= SP int SP DQUOTE string DQUOTE
	
	record-map		= *question NULL
	question		= question-name SP type SP first-byte SP last-byte SP [range-name] LF
	question-name	= string
	type			= "INT8" \ "INT16" \ "INT32" \ "FLOAT" \ "DOUBLE"
	first-byte		= int
	last-byte		= int
	
	data			= *record
	record			= <size of record>BYTE
	
